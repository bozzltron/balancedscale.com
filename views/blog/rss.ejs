<?xml version="1.0" encoding="utf-8"?>
    <rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
      <channel>
        <title>Balanced Scale Media</title>
        <description></description>
        <link>http://<%= host %>/rss</link>
        <language>en</language>
        <copyright>Balanced Scale Media, LLC</copyright>
        <atom:link href="http://<%= host %>/rss" rel="self" type="application/xml" />

        <% _.each(posts, function(post){ %>
        <item>
          <title><%= post.title %></title>
          <description><![CDATA[<%= post.body %>]]></description>
          <link>http://<%= host %><%= post.link %></link>
          <guid isPermaLink="true">http://<%= host %><%= post.link %></guid>
          <pubDate><%= post.publishedDate %></pubDate>
        </item>        
        <% }); %>

      </channel>
    </rss>